<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/banner_home"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:canLoop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/layout_seckill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/miaosha"
                    android:gravity="center"
                    android:text="秒杀" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/tuangou"
                    android:gravity="center"
                    android:text="服务" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_customization"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/dingzhi"
                    android:gravity="center"
                    android:text="拼团" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_train"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/peixun"
                    android:gravity="center"
                    android:text="培训" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:id="@+id/layout_sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/qiandao1"
                    android:gravity="center"
                    android:text="签到" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_coupons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/lingquan"
                    android:gravity="center"
                    android:text="领券" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_makeMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/zhuanqian"
                    android:gravity="center"
                    android:text="赚钱" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_enter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/ruzhu"
                    android:gravity="center"
                    android:text="入驻" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_toutiao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="美帝"
                    android:textColor="@color/main_red"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="头条"
                    android:textColor="@color/main_red"
                    android:textSize="18sp" />
            </LinearLayout>

            <View style="@style/shuxian" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.duma.liudong.meiye.widget.VerticalBannerView
                    android:id="@+id/banner_ad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:animDuration="400"
                    app:gap="2500" />
            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/henxian"
            android:layout_height="4dp" />

        <ImageView
            android:id="@+id/img_ad"
            style="@style/ad" />

        <View
            style="@style/henxian"
            android:layout_height="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_miaosha"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

            <View style="@style/shuxian" />

            <ImageView
                android:id="@+id/img_xinpin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <View
            style="@style/henxian"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_weihuo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

            <View style="@style/shuxian" />

            <ImageView
                android:id="@+id/img_youpin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

            <View style="@style/shuxian" />

            <ImageView
                android:id="@+id/img_rexiao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

            <View style="@style/shuxian" />

            <ImageView
                android:id="@+id/img_haohuo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_shangping"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/bg_hui"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_1" />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/img_1"
                android:text="更多"
                android:visibility="visible" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_shangping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_hui" />

        <LinearLayout
            android:id="@+id/layout_tuangou"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/bg_hui"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_2" />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/img_1"
                android:text="更多"
                android:visibility="visible" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tuangou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_hui" />

        <LinearLayout
            android:id="@+id/layout_dingzhi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/bg_hui"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_3" />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/img_1"
                android:text="更多"
                android:visibility="visible" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_dingzhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_hui" />

        <LinearLayout
            android:id="@+id/layout_tuijian"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/bg_hui"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_4" />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/img_1"
                android:text="更多"
                android:visibility="visible" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tuijian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_hui" />

        <LinearLayout
            android:id="@+id/layout_guanlian"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/bg_hui"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_5" />
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/img_1"
                android:text="更多"
                android:visibility="invisible" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_guanlian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_hui" />

    </LinearLayout>
</ScrollView>