            android:id="@+id/xinbie_lan"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="男"
            android:textSize="16sp" />

        <View style="@style/henxian" />

        <TextView
            android:id="@+id/xinbie_lv"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="女"
            android:textSize="16sp" />

        <View style="@style/henxian" />

        <TextView
            android:id="@+id/xinbie_baomi"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="保密"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>