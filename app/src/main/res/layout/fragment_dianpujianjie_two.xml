<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@drawable/img_75"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="通过企业身份认证" />
            </LinearLayout>

            <View style="@style/henxian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:paddingBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/img_business_licence_cert"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_hui" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout"
                android:layout_width="match_parent"
                android:background="@color/bg_hui">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="工商注册信息"
                    android:textColor="@color/text_hui" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称:" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="猥琐点公司" />
            </LinearLayout>

            <View style="@style/henxian" />

            <LinearLayout
                style="@style/layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经营地址:" />

                <TextView
                    android:id="@+id/tv_addres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="猥琐点公司" />
            </LinearLayout>

            <View style="@style/henxian" />

            <LinearLayout
                style="@style/layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成立日期:" />

                <TextView
                    android:id="@+id/tv_business_date_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="猥琐点公司" />
            </LinearLayout>

            <View style="@style/henxian" />

            <LinearLayout
                style="@style/layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经营范围:" />

                <TextView
                    android:id="@+id/tv_business_scope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="猥琐点公司" />
            </LinearLayout>

            <View style="@style/henxian" />

            <LinearLayout
                style="@style/layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册号:" />

                <TextView
                    android:id="@+id/tv_business_licence_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="猥琐点公司" />
            </LinearLayout>

            <View style="@style/henxian" />

            <LinearLayout
                style="@style/layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="法人代表:" />

                <TextView
                    android:id="@+id/tv_legal_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="猥琐点公司" />
            </LinearLayout>

            <View style="@style/henxian" />

            <LinearLayout
                style="@style/layout"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="企业类型:" />

                <TextView
                    android:id="@+id/tv_company_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="猥琐点公司" />
            </LinearLayout>

            <View style="@style/henxian" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>